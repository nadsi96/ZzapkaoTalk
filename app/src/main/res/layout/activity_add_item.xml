<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.addItem.AddItem"
    android:padding="10dp"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_addTitle"
        android:text="hello"
        android:textColor="@color/white"
        android:textSize="@dimen/contentTitle"
        android:textStyle="bold"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_searchId"
            android:text="검색"
            android:textSize="@dimen/inputText_size"
            android:backgroundTint="@color/darkgray"
            android:layout_alignParentRight="true"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_searchId"
            android:hint="blah blah"
            android:textSize="@dimen/inputText_size"
            android:background="@color/white"
            android:layout_marginVertical="10dp"
            android:layout_toLeftOf="@+id/btn_searchId"
            android:layout_marginRight="5dp"
            />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:src="@color/lightgray"
        android:layout_marginBottom="10dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/view_friendList"
            android:orientation="vertical">

        </LinearLayout>


    </ScrollView>



</LinearLayout>